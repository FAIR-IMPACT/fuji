{
  "Jenkinsfile": {
    "category": [
      "automation"
    ],
    "parse": "full",
    "pattern": [
      "(\\w*/)*Jenkinsfile"
    ]
  },
  "README": {
    "category": [
      "documentation"
    ],
    "parse": "full",
    "pattern": [
      "(\\w*/)*README(\\.(txt|md))?"
    ]
  },
  "docs_directory": {
    "category": [
      "documentation"
    ],
    "parse": "file_name",
    "pattern": [
      "(\\w*/)*docs(/\\w*\\.\\w*)*"
    ]
  },
  "github_actions": {
    "category": [
      "automation"
    ],
    "parse": "full",
    "pattern": [
      "\\.github/workflows/"
    ]
  },
  "maven_pom": {
    "category": [
      "documentation",
      "automation"
    ],
    "parse": "full",
    "pattern": [
      "pom\\.xml"
    ]
  },
  "python_code": {
    "category": [
      "development"
    ],
    "parse": "file_name",
    "pattern": [
      ".*\\.py"
    ]
  }
}
